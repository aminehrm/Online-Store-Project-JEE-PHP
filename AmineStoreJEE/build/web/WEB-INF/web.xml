    <servlet-mapping>
        <servlet-name>ListarProductos</servlet-name>
        <url-pattern>/portada.html</url-pattern>
        <url-pattern>/general.html</url-pattern>
        <url-pattern>/moviles.html</url-pattern>
        <url-pattern>/componentes.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InfoProducto</servlet-name>
        <url-pattern>/producto.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cesta</servlet-name>
        <url-pattern>/cesta.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login_usuario.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarUsuario</servlet-name>
        <url-pattern>/registrar_usuario.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>contact</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Principal</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdesarPedido</servlet-name>
        <url-pattern>/formalizar_compra.html</url-pattern>
    </servlet-mapping>
