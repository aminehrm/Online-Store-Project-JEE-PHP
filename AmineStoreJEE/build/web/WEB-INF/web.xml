    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DatosUsuario</servlet-name>
        <url-pattern>/datos_personales.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarPedidosUsuario</servlet-name>
        <url-pattern>/pedidos_usuario.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DatosPedidos</servlet-name>
        <url-pattern>/datos_pedido.html</url-pattern>
        <url-pattern>/cancelar_pedido.html</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
