        <servlet-class>servlet.ProdesarPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TramitarPedido</servlet-name>
        <servlet-class>servlet.TramitarPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DatosUsuario</servlet-name>
        <servlet-class>servlet.DatosUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarPedidosUsuario</servlet-name>
